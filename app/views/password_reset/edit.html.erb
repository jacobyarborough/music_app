<h1>Enter New Password</h1>

<%= form_with url: password_reset_update_path, method: :patch, local: true do |form| %>
  <div class="mb-3">
    <%= form.label :password %>
    <%= form.password_field :password, class: "form-control", placeholder: "example@mail.com" %>
  </div>
  <div class="mb-3">
    <%= form.label :password_confirmation %>
    <%= form.password_field :password_confirmation, class: "form-control", placeholder: "example@mail.com" %>
  </div>
  <div class="mb-3">
    <%= form.submit "Update Password", class: "btn btn-primary" %>
  </div>
<% end %>